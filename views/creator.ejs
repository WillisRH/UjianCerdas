<h1>Exam Creator</h1>

<% if (typeof examCreated !== 'undefined') { %>
<h2>Exam Created Successfully!</h2>
<p>Question: <%= examCreated.question %></p>
<p>Choices: <%= examCreated.choices.join(', ') %></p>
<p>Answer: <%= examCreated.answer %></p>
<% } %>

<form action="/create" method="POST">
  <label for="question">Question:</label>
  <input type="text" id="question" name="question" required><br>

  <label for="choices">Choices (comma-separated):</label>
  <input type="text" id="choices" name="choices" required><br>

  <label for="answer">Answer:</label>
  <input type="text" id="answer" name="answer" required><br>

  <button type="submit">Create Exam</button>
</form>